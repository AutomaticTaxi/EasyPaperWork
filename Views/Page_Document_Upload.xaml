<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EasyPaperWork.Views.Page_Document_Upload"
            
             Title="Page_Document_Upload">
  
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <StackLayout>
            <Button Text="Selecionar Arquivo" Command="{Binding PickFileCommand}" />
            <Label Text="{Binding SelectedFileName}" />
            <Button Text="ScanDocument" Command="{Binding ScanFileCommand}"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>